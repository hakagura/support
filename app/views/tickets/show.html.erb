<p id="notice"><%= notice %></p>

<p>
  <b>Summary:</b>
  <%= @ticket.summary %>
</p>

<p>
  <b>Description:</b>
  <%= @ticket.description %>
</p>

<p>
  <b>Priority:</b>
  <%= @ticket.priority %>
</p>

<p>
  <b>Difficulty:</b>
  <%= @ticket.difficulty %>
</p>

<p>
  <b>Attended by:</b>
  <%= @ticket.attended_by %>
</p>

<p>
  <b>Requested by:</b>
  <%= @ticket.requested_by %>
</p>

<p>
  <b>Status:</b>
  <%= @ticket.status %>
</p>

<% @ticket.calls.each do |call| %>

  Id<br />
	<%= call.id %>
  <br>Answer<br />
	<%= call.answer %><br/>
<% end %>









<%= form_for([@ticket, @ticket.calls.build]) do |f| %>

  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



<br><br><%= link_to 'Edit', edit_ticket_path(@ticket) %> |
